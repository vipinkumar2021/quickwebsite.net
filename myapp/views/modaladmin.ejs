            <button type="submit">Sign in</button><button type="reset">Reset</button><button onclick="closeSigninModal()">cancel</button><br/><br/>
          </div>          
          <div class="modal-anchor-tags">
            <a href="/forgotusername">Forgot Username</a>
            <a href="/forgotpassword">Forgot Password</a>                
            <a href="#" onclick="openSignUpModal()">Register</a>
          </div>
        </form>
        <span class="X-signin">&times;</span>
    </div>
  </div>
