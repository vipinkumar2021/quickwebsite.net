<%- include('dashboardheader') %>

<div class="item item3 main ">
    <div class="container welcome getstarted" ><!--welcome css working in this-->
        <br/><br/><br/><br/>
        <% if(msg != '') { %>
            <h2><%= msg %> </h2>
        <% } %> 
        <h2>Start Building Your Website<br/><br/>
             <strong>Select your choice below</strong>
        </h2>    
         
            <form action="/dashboardgetstarted" method="post" role="form" enctype="multipart/form-data">
            <label>STEP 1. Template:-</label><br/>
            <select name="template" id="template">
                <option>Select Template</option>
                <optgroup label="Food & Restaurant Templates">
                    <option value="Pizza Restaurant Template &#9989;">Pizza Restaurant Template</option>
                    <option value="Catering Template &#9989;">Catering Template</option>
                    <option value="Modal Restaurant Template &#9989;">Modal Restaurant Template</option>                    
                    <option value="Cafe Template &#9989;">Cafe Template</option>                    
                </optgroup>
                <optgroup label="Portfolio Templates">
                    <option value="Portfolio Template &#9989;">Portfolio Template</option>
                    <option value="CV Template &#9989;">CV (Resume) Template</option>
                    <option value="Photo Portfolio Template &#9989;">Photo Portfolio Template</option>
                    <option value="Nature Portfolio Template &#9989;">Nature Portfolio</option>                    
                </optgroup>
                <optgroup label="Small Business Website Templates">
                    <option value="Clothing Store Template &#9989;">Clothing Store Template</option>
                    
                </optgroup>
                <optgroup label="Blog Templates">
                    <option value="Blog Template &#9989;">Blog Template</option>
                    <option value="Food Blog Template &#9989;">Food Blog Template</option>
                    <option value="Fashion Blog Template &#9989;">Fashion Blog Template</option>
                    <option value="Cafe Blog Template &#9989;">Cafe Blog Template</option>
                    <option value="Travel Blog Template &#9989;">Travel Blog Template</option>
                </optgroup>
                <optgroup label="Invitation Templates">
                    <option value="Wedding Invitation &#9989;">Wedding Invitation</option>                    
                </optgroup>
                <optgroup label="Simple Webpage Templates">
                    <option value="Web Page Template &#9989;">Web Page Template</option>                    
                </optgroup>
                <optgroup label="Coming Soon Templates">
                    <option value="Coming Soon Template &#9989;">Coming Soon Template</option>                    
                </optgroup>
                <optgroup label="Other Templates">
                    <option value="Band Template &#9989;">Band Template</option>
                    <option value="Photo Album Template &#9989;">Photo Album Template</option>                    
                </optgroup>                
            </select><br/>
            <input type="hidden" name="templateoptionestimatedtime" value="1 Day"/><input type="hidden" name="templateoptionprice" value="$ 50.00"/>
            
            <label>STEP 2. Basic Features:- </label><br/>
            <label>Please Click the box and Select Basic Features: </label><br/>
            <input id="hompage-checkbox" type="checkbox" name="home" value="Home Page &#9989;"  onclick="showHideHomePageContentForm()"/><input type="hidden" name="homepageestimatedtime" value="1 Day"/><input type="hidden" name="homepageprice" value="$ 30.00"/><label>I want "Home Page" in my website</label><br/>
            <label id="home-page-content-label">Please Provide "Home Page Content" (If Available)</label><br/>
            <textarea id="home-page-content-textarea" name="homepagecontent" placeholder="Enter Home Page Content here...">
            
            </textarea><br/>         
            
            <input id="about-checkbox" type="checkbox" name="about" value="About &#9989;" onclick="showHideAboutContentForm()"/><input type="hidden" name="aboutestimatedtime" value="1 Day"/><input type="hidden" name="aboutprice" value="$ 30.00"/><label>I want "About" Feature in my website</label><br/>
            <label id="about-content-label">Please Provide "About Content" (if Available)</label><br/>
            <textarea id="about-content-textarea" name="aboutcontent">

            </textarea><br/>
            <input id="services-checkbox" type="checkbox" name="services" value="Services &#9989;" onclick="showHideServicesContentForm()"/><input type="hidden" name="servicesestimatedtime" value="1 Day"/><input type="hidden" name="servicesprice" value="$ 30.00 "/><label>I want "Services" Feature</label><br/>
            <label id="services-content-label">Please Provide "Services Content" (If Available)</label><br/>
            <textarea id="services-content-textarea" name="servicescontent">

            </textarea><br/>
            <input id="why-us-checkbox" type="checkbox" name="whyus" value="Why Us &#9989;" onclick="showHideWhyUsContentForm()"/><input type="hidden" name="whyusestimatedtime" value="1 Day"/><input type="hidden" name="whyusprice" value="$ 30.00 "/><label>I want "Why Us" Feature</label><br/>
            <label id="why-us-content-label">Please Provide "Content for Why Us Feature" (If Available)</label><br/>
            <textarea id="why-us-content-textarea" name="whyuscontent">

            </textarea><br/>

            <input type="checkbox" name="contactusonlyaddress" value="Contact Us (Only Address) &#9989;" /><input type="hidden" name="contactusestimatedtime" value="1 Day"/><input type="hidden" name="contactusprice" value="$ 30.00 "/><label>I want "Contact Us (Only Address)"</label><br/>
            <label>Please provide the "Address" to be mentioned in your website (Required)</label><br/>
            <input type="address" name="address"/><br/>

            <label>Please provide the "Phone Number" to be shown in your website (Required)</label><br/>
            <input type="tel" name="phonenumber" maxlength="15" /><br/>

            <label for="emailid">Email Id (Required)</label><br/>
            <input type="email" name="emailid" id="emailid"><br/>

            <input id="social-media-checkbox" type="checkbox" name="socialmedia" value="Social Media &#9989;" onclick="showHideSocialMediaContentForm()"/><input type="hidden" name= "socialmediaestimatedtime" value="1 Day"/><input type="hidden" name="socialmediaprice" value="$ 40.00"/><label>I want "Social Media" Feature</label><br/>
            <label id="social-media-content-label">Please Provide url of your social media accounts link. (eg. https://www.facebook.com/quickwebsite)</label><br/>
            <textarea id="social-media-content-textarea" name="socialmedialink" >
        
            </textarea><br/>
            <input id="policy-checkbox" type="checkbox" name="policy" value="Policy &#9989;" onclick="showHidePolicyContentForm()"/><input type="hidden" name="policyestimatedtime" value="2 Day"/><input type="hidden" name="policyprice" value="$ 40.00"/><label>I want to include my "Policy"</label><br/>
            <label id="policy-content-label">Please Provide Your Business Policy to mention in your website</label><br/>
            <textarea id="policy-content-textarea" name="policycontent">

            </textarea><br/>  

            <input id="terms-and-conditions-checkbox" type="checkbox" name="termsandconditions" value="Terms & Conditions &#9989;" onclick="showHideTermsAndConditionsContentForm()"/><input type="hidden" name="termsandconditionsestimatedtime" value="2 Day"/><input type="hidden" name="termsandconditionsprice" value="$ 40.00"/><label>I want to Include "Terms & Conditions"</label><br/>
            <label id="terms-and-conditions-content-label">Please Provide Your Business Terms & Conditions to mention in your website</label><br/>
            <textarea id="terms-and-conditions-content-textarea" name="termsandconditionscontent">

            </textarea><br/>
            <input id="copy-right-checkbox" type="checkbox" name="copyright" value="Copy Right &#9989;" onclick="showHideCopyRightContentForm()"/><input type="hidden" name="copyrightestimatedtime" value="1 Day"/><input type="hidden" name="copyrightprice" value="$ 30.00"/><label>I want to include "Copy right" information</label><br/>
            <label id="copy-right-content-label">Please provide Copy Right Information (if any)</label><br/>
            <textarea id="copy-right-content-textarea" name="copyrightcontent" >

            </textarea><br/><br/>

            <input type="radio" name="logo" value="I want to buy Logo &#9989;" onclick="hideLogoFileUploadInput()"/><input type="hidden" name="logopurchasingestimatedtime" value="1 Day"/><input type="hidden" name="logopurchasingprice" value="$ 60.00"/><label>I want to buy "Logo"</label><br/>
            <input type="radio" name="logo" value="I have my own Logo &#9989;" onclick="showLogoFileUploadInput()"/><input type="hidden" name="logobycustomerestimatedtime" value="1 Day"/><input type="hidden" name="logobycustomerprice" value="$ 30.00"/><label>I have my own Logo</label><br/>
            <label class="logo-file-upload-label">Please Upload your Logo here (if you have one)</label><br/>
            <input type="file" name="uploadcontentforlogo" style="display: none;" class="logo-file-upload-input"/><br/>


            <label>STEP 2. External Features:- </label><br/>
                           
            <input id="photo-gallery-checkbox" type="checkbox" name="gallery" value="Gallery &#9989; (Note: Database Required, So Included Database Charges )" onclick="showHidePhotoGalleryContentForm()"/><input type="hidden" name="galleryestimatedtime" value="3 Day"/><input type="hidden" name="galleryprice" value="$ 150.00"/><label>I want to include "Photo Gallery"</label><br/>
            <label id="photo-gallery-content-label">"Any Text Content" For "Photo Gallery"</label><br/>
            <textarea id="photo-gallery-content-textarea" name="textcontentforgallery">

            </textarea><br/>
            
           <label id="photo-gallery-upload-content-label">Upload content to show in Photo Gallery</label><br/>
            <input id="photo-gallery-upload-content-input" type="file" name="uploadcontentforgallery"/><br/>

            <input id="templates-feature-checkbox" type="checkbox" name="templatesfeature" value="Templates Feature &#9989; (Note: Database Required, So Included Database Charges )" onclick="showHideTemplatesFeatureContentForm()"/><input type="hidden" name="templatesfeatureestimatedtime" value="3 Day"/><input type="hidden" name="templatesfeatureprice" value="$ 150.00"/><label>I want to show my work "Templates"</label><br/>
            <label id="templates-feature-content-label">"Text Content" for "Templates"</label><br/>
            <textarea id="templates-feature-content-textarea" name="textcontentfortemplates">

            </textarea><br/>
            <label id="templates-feature-upload-content-label">"Upload Content" to show in "Templates" </label><br/>
            <input id="templates-feature-upload-content-input" type="file" name="uploadcontentfortemplates"/><br/>  

            
            <input id="menu-checkbox" type="checkbox" name="menu" value="Menu &#9989; (Note: Database Required, So Included Database Charges )" onclick="showHideMenuContentForm()"/><input type="hidden" name="menuestimatedtime" value="2 Day"/><input type="hidden" name="menuprice" value="$ 100.00"/><label>I want to show my "Menu" to my website</label><br/>
            <label id="menu-content-label">Menu Content</label><br/>
            <textarea id="menu-content-textarea" name="textcontentformenu">

            </textarea><br/>
            <label id="menu-or-label">OR</label>
            <label id="menu-upload-content-label">"Upload Menu Image" to show in Menu Section of your Food Services website (word or pdf)</label><br/>
            <input id="menu-upload-content-input" type="file" name="uploadcontentformenu"/><br/>
        <br/>


        <label>STEP 3. Advanced Features:- </label><br/>
            
            <input type="checkbox" name="registerlogin" value="Register and Log in &#9989; (Note: Database Required, So Included Database Charges )"/><input type="hidden" name="registerloginestimatedtime" value="3 Day"/><input type="hidden" name="registerloginprice" value="$ 150.00"/><label>I want Register and Log in Feature</label><br/>
            
            <input type="checkbox" name="contactuswithform" value="Contact Us With Address Plus Contact Form &#9989; (Note: Database Required, So Included Database Charges )"/><input type="hidden" name="contactuswithformestimatedtime" value="1 Day"/><input type="hidden" name="contactuswithformprice" value="$ 80.00"/><label>I want to add "Contact Form" in my Contact Us Feature</label><br/>

            <input id="payment-method-checkbox" type="checkbox" name="paymentmethod" value="Payment Method &#9989; (Note: Database Required, So Included Database Charges )" onclick="showHidePaymentMethodContentForm()"/><input type="hidden" name="paymentmethodestimatedtime" value="1 Day"/><input type="hidden" name="paymentmethodprice" value="$ 185.00"/><label>I want to accept payments through my website using "Payment Method"</label><br/><br/>
            <label id="payment-method-content-label">Please Provide your Individual/Business Bank Account Number with IFSC and GST/PAN Number (Required for accepting payments)</label>
            <textarea id="payment-method-content-textarea" name="bankaccountandifsc">

            </textarea><br/>
                        
            <label>STEP 4. Designing:- </label><br/>
            <input type="radio" name="websitebackground" value="I want Background-Color in my Website &#9989;" onclick="showBackgroundColorInput()" /><input type="hidden" name="websitebackgroundestimatedtime" value="1 Day"/><input type="hidden" name="websitebackgroundcolorprice" value="$ 0.00"/><label>I want Background-color in my Website</label><br/>
            <label class="background-color-select-input" >Choose Website's Background color:- </label><input type="color" name="backgroundcolor" class="background-color-select-input" /><br/>
            
            <input type="radio" name="websitebackground" value="I want Background-Image in my Website &#9989;" onclick="showBackgroundImageInput()"/><input type="hidden" name="websitebackgroundimageprice" value="$ 30.00"/><label>I want Background-Image in my Website</label></span><br/>     
            <label class="background-image-select-label">Upload Website's Background Image</label><input type="file" name="backgroundimage" style="display: none;" class="background-image-select-input"/>
            <br/>

            <label>Choose Website's Text Color:- </label><br/>
            <input type="color" name="textcolor"/>

            <br/>
            <label>STEP 5.</label><br/>
            <label>Other Features or Services:</label><br/>
        
            <input type="checkbox" name="emailservice" value="Email Services &#9989;"/><input type="hidden" name="emailserviceestimatedtime" value="3 Day"/><input type="hidden" name="emailserviceprice" value="$ 140.00"/><label>I want to send Email from my website</label><br/>
            <input type="checkbox" name="messageservice" value="Message Services &#9989;"/><input type="hidden" name="messageserviceestimatedtime" value="3 Day"/><input type="hidden" name="messageserviceprice" value="$ 150.00"/><label>I want to send Text Messages from my website</label><br/>
            <input type="checkbox" name="database" value="Data Base &#9989;"/><input type="hidden" name="databaseestimatedtime" value="3 Day"/><input type="hidden" name="databaseprice" value="$ 150.00"/><label>Data Base</label><br/>
<br/>
            <label>STEP 7. Uploads</label><br/>            
            <label>Upload Images and word Files </label><br/>
            <input type="file" name="uploadedfilesnames"/><br/>
                    
                
            <label>STEP 8.</label><br/>
            <label>Additional</label><br/>
            
            <label>Describe your website briefly to get the idea of website you would like</label><br/>
            <textarea name="websitebriefdescription">
        
            </textarea><br/>
            <label>Include</label><br/>
            <textarea name="include">
        
            </textarea><br/>
            <label>Do Not Include</label><br/>
            <textarea name="donotinclude">
        
            </textarea><br/>
            <label>Other Charges (For Additional Services if provided):</label><br/>
            $: <input type="number" name="othercharges" min="0" placeholder="0.00"/>
            <br/><br/><br/>           
            

            <input type="submit" class="shop-item-button"  value="Add To Cart"/>
        </form>        
           
    
    </div>     

</div>
